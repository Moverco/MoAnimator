<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="top.moverco.moanimator.MainActivity">
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        app:srcCompat = "@drawable/process_anim"
        android:onClick="anim"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <Button
        android:background="@drawable/bg_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <ImageView
        app:srcCompat="@drawable/arrow_anim"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="anim"/>
    <ImageView
        app:srcCompat="@drawable/square_anim"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="anim"/>
    <ImageView
        app:srcCompat="@drawable/searchbar_anim"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="anim"/>
    </LinearLayout>
</ScrollView>
